<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_success_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="straightforwardapps.first_networking.SuccessLogin"

    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/baad"
        android:background="#bb0e0c84"
        android:visibility="gone"
        >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:textSize="25dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:textColor="#ffe4e4"
    android:textAlignment="viewStart"
    android:id="@+id/reg_disp"
    android:text="Vishal Dhawan"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Logout"
        android:background="#be5252"
        android:textColor="#2a2a8c"
        android:id="@+id/lin"
        android:onClick="logout"
        android:layout_alignParentRight="true"
        />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/refresh"
            android:layout_below="@+id/lin"
            android:layout_alignRight="@+id/lin"
            android:layout_marginRight="25dp"
            android:onClick="refresh"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/space"
        android:layout_below="@+id/lin"
        />


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@+id/space"
            >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv"
        android:background="#a5bfe9"

        >

    </ListView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading.."
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="#1b1818"
        android:background="#eeffffff"
        android:id="@+id/load"
        />
    </RelativeLayout>



</RelativeLayout>
